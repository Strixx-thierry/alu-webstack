#!/usr/bin/env bash
# A bash script that prints information about subdomains.

function get_sub_info {
  local domain=$1
  local subdomain=$2
  local full_domain="${subdomain}.${domain}"
  local record_info=$(dig +short ${full_domain})

  if [[ -z "$record_info" ]]; then
    echo "No DNS record found for ${full_domain}"
    return
  fi

  # Assuming the record is an A record (IPv4 address), adjust if you want to handle more types.
  echo "The subdomain ${subdomain} points to IP ${record_info}"
}

domain=$1
subdomain=$2

if [[ -z "$subdomain" ]]; then
  for sub in www lb-01 web-01 web-02; do
    get_sub_info $domain $sub
  done
else
  get_sub_info $domain $subdomain
fi